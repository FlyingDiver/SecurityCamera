<?xml version="1.0"?>
<Actions>
	<Action id="StopCamera" deviceFilter="self">
		<Name>Stop Camera</Name>
		<CallbackMethod>StopCamera</CallbackMethod>
	</Action>
	<Action id="StartCamera" deviceFilter="self">
		<Name>Start Camera</Name>
		<CallbackMethod>StartCamera</CallbackMethod>
	</Action>
	<Action id="ToggleCamera" deviceFilter="self">
		<Name>Toggle Camera</Name>
		<CallbackMethod>ToggleCamera</CallbackMethod>
	</Action>
	<Action id="MasterCamera" deviceFilter="self">
		<Name>Set Master Camera</Name>
		<CallbackMethod>MasterCamera</CallbackMethod>
	</Action>
	<Action id="ToggleResolution" deviceFilter="self">
		<Name>Toggle Resolution</Name>
		<CallbackMethod>ToggleResolution</CallbackMethod>
	</Action>
	
	<Action id="actionSeperatorMotion" />
	
	<Action id="MotionOn" deviceFilter="self">
		<Name>Motion On</Name>
		<CallbackMethod>MotionOn</CallbackMethod>
	</Action>
	<Action id="MotionOff" deviceFilter="self">
		<Name>Motion Off</Name>
		<CallbackMethod>MotionOff</CallbackMethod>
	</Action>
	<Action id="ToggleMotion" deviceFilter="self">
		<Name>Toggle Motion</Name>
		<CallbackMethod>ToggleMotion</CallbackMethod>
	</Action>
	
	<Action id="actionSeperatorCarousel" />
	
	<Action id="ToggleCarousel" deviceFilter="self">
		<Name>Toggle Carousel</Name>
		<CallbackMethod>ToggleCarousel</CallbackMethod>
	</Action>
	<Action id="ToggleCarouselCamera" deviceFilter="self">
		<Name>Toggle Carousel Loop</Name>
		<CallbackMethod>ToggleCarouselCamera</CallbackMethod>
	</Action>
	<Action id="NextCarouselCamera" deviceFilter="self">
		<Name>Next Carousel Camera</Name>
		<CallbackMethod>NextCarouselCamera</CallbackMethod>
	</Action>
	
	<Action id="actionSeperatorPhoto" />
	
	<Action id="Snapshot" deviceFilter="self">
		<Name>Snapshot</Name>
		<ConfigUI>
			<Field id="Quality" type="menu">
				<Label>Quality:</Label>
				<List>
					<Option value="100">Original</Option>
					<Option value="75">High</Option>
					<Option value="50">Medium</Option>
					<Option value="10">Low</Option>
				</List>
			</Field>
		</ConfigUI>
		<CallbackMethod>Snapshot</CallbackMethod>
	</Action>
	<Action id="Mosaic" deviceFilter="self">
		<Name>Mosaic</Name>
		<CallbackMethod>Mosaic</CallbackMethod>
	</Action>
	
	<Action id="actionSeperatorRecord" />
	
	<Action id="RecordCamera" deviceFilter="self">
		<Name>Record</Name>
		<CallbackMethod>RecordCamera</CallbackMethod>
	</Action>
	<Action id="PlayRecording" deviceFilter="self">
		<Name>Play</Name>
		<ConfigUI>
			<Field id="PlaySelect" type="menu">
				<Label>Select Recording:</Label>
				<List>
					<Option value="01">Video 1</Option>
					<Option value="02">Video 2</Option>
					<Option value="03">Video 3</Option>
					<Option value="04">Video 4</Option>
					<Option value="05">Video 5</Option>
					<Option value="06">Video 6</Option>
					<Option value="07">Video 7</Option>
					<Option value="08">Video 8</Option>
					<Option value="09">Video 9</Option>
					<Option value="10">Video 10</Option>
				</List>
			</Field>
		</ConfigUI>
		<CallbackMethod>PlayRecording</CallbackMethod>
	</Action>
	<Action id="Pause">
		<Name>Pause/Play</Name>
		<CallbackMethod>PauseRecording</CallbackMethod>
	</Action>
	<Action id="FrameBackward">
		<Name>Frame Backward</Name>
		<CallbackMethod>FrameBackward</CallbackMethod>
	</Action>
	<Action id="FrameForward">
		<Name>Frame Forward</Name>
		<CallbackMethod>FrameForward</CallbackMethod>
	</Action>
	
	<Action id="actionSeperatorCommand" />
	
	<Action id="CameraCommand">
		<Name>Camera Command</Name>
		<ConfigUI>
			<Field id="CameraCommandURL" type="textfield">
				<Label>Camera Command:</Label>
			</Field>
			<Field id="ReturnVariable" type="textfield">
				<Label>Return Variable:</Label>
			</Field>
		</ConfigUI>
		<CallbackMethod>CameraCommand</CallbackMethod>
	</Action>
	
	<Action id="actionSeperatorArchive" />
	
	<Action id="DeleteRecording" deviceFilter="self">
		<Name>Archive Old Files</Name>
		<ConfigUI>
			<Field id="DeleteMonths" type="textfield">
				<Label>Archive recording older than (in months):</Label>
			</Field>
		</ConfigUI>					
		<CallbackMethod>DeleteRecording</CallbackMethod>
	</Action>
</Actions>



